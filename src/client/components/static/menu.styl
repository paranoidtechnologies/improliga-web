@import '../../app/styles/vars.styl'

.site-menu
  fix-transition()
  background rgba(page-bg,.4)
  left 0
  right 0
  padding 10px 0 0
  position fixed
  top 0
  z-index 666

  li
    display inline-block

  &:hover
    background rgba(page-bg,.95)

  .site-menu-center
    margin 0 auto
    position relative

  .site-menu-inner
    margin 0 auto
    text-align center

    a
      fix-transition(speed-fast)
      border-bottom 1px solid transparent
      color text-normal
      display inline-block
      font-size 14px
      font-weight 500
      margin-right 5px
      opacity .75
      padding 4px 12px 5px
      text-decoration none
      text-shadow 0 0 3px text-shadow, 0 0 6px text-shadow

      &:hover,
      &.opacity
        opacity 1

      &:hover
        border-color text-normal

      &.active
        border-color rgba(text-normal, .75)
