@import '../app/styles/animations.styl'
@import '../app/styles/vars.styl'

.ui-event
  ui-button()

  display inline-block
  vertical-align top
  text-align left
  margin-bottom 10px
  margin-right 10px
  padding 10px 0
  width 290px

  img
    border none

  .ui-event-image
    float left
    margin-right 15px

    &, a
      display block
      height 75px
      width 75px

  .ui-event-info
    float left
    width 200px
    min-height 90px
