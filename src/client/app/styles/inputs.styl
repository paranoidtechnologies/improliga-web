@import './vars.styl'

input,
textarea
  background input-bg
  color input-text-normal
  font-weight 400

  &:active,
  &:focus
    color input-text-active


.ui-input
  margin-bottom 10px

  &:last-child
    margin-bottom 0

  .ui-input-label,
  .ui-input-container
    display inline-block
    vertical-align top

  .ui-input-label
    width 80px

.ui-input-email,
.ui-input-text,
.ui-input-textarea
  input,
  textarea
    border none
    border-radius 2px
    line-height 24px
    padding 4px 8px
