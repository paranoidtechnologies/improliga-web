// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@import '../../../../node_modules/normalize.css/normalize.css'
@import './vars.styl'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

:focus {outline:none}
::-moz-focus-inner {border:0}

html,
body
  background black-bg
  padding 0
  margin 0
  min-width 400px
  min-height 400px
  height 100%

#app,
.page
.page-home
  height:100%

html
  background black-bg

body
  color white-fg
  font-family 'Segoe UI', 'Lucida Grande','Ubuntu','sans-serif'
  font-size 16px
  line-height 1.5

a
  fix-transition()
  color col-link
  text-decoration none

  img
    border 2px solid rgba(184,36,21,0.2)
    opacity .8
    display block

  &:hover
    text-decoration underline

    img
      border-color rgba(184,36,21,0.75)
      opacity 1

.cleaner
  clear both
  display block

.ui-page
  padding-top 60px

@import './text.styl'
@import './buttons.styl'
@import './forms.styl'
@import './inputs.styl'
